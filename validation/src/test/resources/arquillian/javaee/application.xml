<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
             http://java.sun.com/xml/ns/javaee/application_6.xsd"
             version="6">
    <description>
        This is a project which provides example for multiple deploying to the
        Arquillian with propose to achieve the JUnit test suite.</description>
    <display-name>administration-ear</display-name>
    <module>
        <ejb>my-app-ejb.jar</ejb>
    </module>
    <module>
        <web>
            <web-uri>my-app-web.war</web-uri>
            <context-root>/my-app-web</context-root>
        </web>
    </module>
</application>